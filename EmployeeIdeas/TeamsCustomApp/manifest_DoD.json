  "name": {
    "short": "Employee ideas",
    "full": "Employee ideas"
  },
  "developer": {
    "name": "Open Source",
    "websiteUrl": "https://github.com/microsoft/teams-powerapps-app-templates",
    "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
